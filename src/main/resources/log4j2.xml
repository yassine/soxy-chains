<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="soxy-chains" packages="">
  <Appenders>
    <Console name="COLORFUL" target="SYSTEM_OUT">
      <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.apache.camel" level="info" additivity="false">
      <AppenderRef ref="COLORFUL"/>
    </Logger>
    <Logger name="com.github.dockerjava" level="debug" additivity="false">
      <AppenderRef ref="COLORFUL"/>
    </Logger>
    <Root level="INFO">
      <AppenderRef ref="COLORFUL"/>
    </Root>
  </Loggers>
</Configuration>
